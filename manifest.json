{
    "manifest_version": 3,
    "name": "Concert Ticket Price Tracker",
    "version": "1.0",
    "permissions": [
      "storage",
      "notifications",
      "alarms",
      "activeTab"
    ],
    "host_permissions": [
      "https://www.ticketmaster.com/*",
      "https://seatgeek.com/*",
      "https://www.vividseats.com/*",
      "https://www.axs.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.ticketmaster.com/*",
          "https://seatgeek.com/*",
          "https://www.vividseats.com/*",
          "https://www.axs.com/*"
        ],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
}
